    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch via pnpm",
            "runtimeExecutable": "/bin/bash",
            "runtimeArgs": [
                "-c",
                "source ~/.nvm/nvm.sh && cd agent && nvm use && pnpm start --character='characters/grichka.character.json'"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}